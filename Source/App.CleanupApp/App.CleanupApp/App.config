<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="SpaceMonitor" type="App.CleanupApp.Configuration.SpaceMonitorConfigurationSection, App.CleanupApp"/>
  </configSections>
  
  <startup>
    
  <supportedRuntime version="v2.0.50727"/></startup>

  <SpaceMonitor>
    <Drivers>
      <Driver Letter="D" LimitSpaceToSendNotificationInPercentual="80" BackupTargetFolder="CompressedFolder" KeepLastRecentCompressedFile="" LimitSpaceToCleanupInPercentual="85">
        <Folders  >
          <Folder Path="Logs"></Folder>
          <Folder Path="Source"></Folder>
          <Folder Path="Backups"></Folder>
        </Folders>
      </Driver>
      
      <Driver Letter="C" LimitSpaceToSendNotificationInPercentual="70" BackupTargetFolder="CompressedFolder" KeepLastRecentCompressedFile="10" LimitSpaceToCleanupInPercentual="95">
        <Folders>
          <Folder Path="Logs"></Folder>
          <Folder Path="Source"></Folder>
          <Folder Path="Backups"></Folder>
        </Folders>
      </Driver>      
      
    </Drivers>
  </SpaceMonitor>
  
</configuration>
